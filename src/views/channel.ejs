<div class="container-fluid" id="banner">

</div>
<div class="container-fluid" id="channel">
  
</div>


<div class="container mt-5 mb-5">
    <section id="trailer">
      
    </section>
</div>


<!-- Modal Collection playList-->
<div class="modal fade" id="modalCollectionChannel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Guardar canal en coleccion</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="newChannelCollection">
          <div class="modal-body">
            <div class="form-group">
              <select class="browser-default custom-select custom-select-lg mb-3" id="selectedCollectionChannel" required>
              </select>        
            </div>      
            <div class="form-group">
              <label for="comment">Agrega un comentario al canal</label>
              <input type="text" class="form-control" id="comment" placeholder="Deja un comentario sobre el canal" required>
            </div>
            <div class="form-group">
              <label for="description">Selecciona o agrega nuevos tags al canal</label>
              <input type="text" class="form-control" id="tag" placeholder="Escriba tag" onInput="keyPressValue('tag','selectTag')">
              <a class="btn btn-primary" id="saveTag" onclick="SelectSaveTag('tag','noSave','save')">Guardar nuevo tag</a>
              <h6 class="text-danger" id="noSave"></h6>
              <h6 class="text-success" id="save"></h6>
              <section id="selectTag" class="form-group">
  
              </section>
              <div id="labelTags">
  
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-dark">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  

  <!-- Modal subscription -->
<div class="modal fade" id="subscriptionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      <div class="modal-body" id="subcriptionMss">
      </div>
    </div>
  </div>
</div>


  <!-- Modal unsubscription -->
  <div class="modal fade" id="unsubscriptionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        <div class="modal-body">
          <a class="btn btn-dark" type="button" data-dismiss="modal" aria-label="Close">Cancelar</a>
          <a class="btn btn-danger" type="button" data-dismiss="modal" aria-label="Close" onclick="unsubscribe()">Anular Suscripci√≥n</a>
        </div>
      </div>
    </div>
  </div>
