

<!-- Modal Collection -->
<div class="modal fade" id="modalCollection" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Guardar video en coleccion</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form id="newVideoCollection">
          <div class="modal-body">
            <div class="form-group">
              <select class="browser-default custom-select custom-select-lg mb-3" id="selectedCollection" required>
              </select>        
            </div>      
            <div class="form-group">
              <h6>Puedes elegir el momento donde quieres que empiece y termine el video</h6>
              <label for="startAt">Inicio</label>
              <input type="range" class="form-range w-100" value="0" min="0" max="" id="startAt" oninput="this.nextElementSibling.value = this.value">
              <output>0</output> <span>segundo</span>
              <br>
              <label for="endAt">Fin</label>
              <input type="range" class="form-range w-100" value="0" min="0" max=""  id="endAt" oninput="this.nextElementSibling.value = this.value">
              <output>0</output> <span>segundo</span>
            </div>
            <div class="form-group">
              <label for="comment">Comentario</label>
              <input type="text" class="form-control" id="comment" placeholder="Deja un comentario sobre el video" required>
            </div>
            <div class="form-group">
              <label for="description">Selecciona o agrega nuevos tags a tu video</label>
              <input type="text" class="form-control" id="tag" placeholder="Escriba tag" onInput="keyPressValue()">
              <a class="btn btn-primary" id="saveTag">Guardar nuevo tag</a>
              <h6 class="text-danger" id="noSave"></h6>
              <h6 class="text-success" id="save"></h6>
              <section id="slectTag" class="form-group">

              </section>
              <div id="labelTags">

              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-dark">Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="src/../../assets/js/videoCollection.js"></script>